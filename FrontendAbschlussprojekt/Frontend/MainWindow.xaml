<Window
    x:Class="Frontend.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Frontend"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30px" />
            <RowDefinition Height="30px" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30px" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30px" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30px" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="#404060">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30px" />
                <ColumnDefinition Width="30px" />
                <ColumnDefinition Width="30px" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="BtnClose"
                Grid.Column="3"
                Background="Transparent"
                Click="BtnClose_Click">
                <svgc:SvgViewbox Height="30" Source="\img\ico\close.svg" />
            </Button>
            <Button
                x:Name="BtnMaxMin"
                Grid.Column="2"
                Background="Transparent"
                Click="BtnMaxMin_Click">
                <svgc:SvgViewbox
                    x:Name="SVGMaxMin"
                    Height="30"
                    Source="\img\ico\window-maximize.svg" />
            </Button>
            <Button
                x:Name="BtnMinimize"
                Grid.Column="1"
                Background="Transparent"
                Click="BtnMinimize_Click">
                <svgc:SvgViewbox Height="30" Source="\img\ico\window-minimize.svg" />
            </Button>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Frame
                Name="MainFrame"
                NavigationUIVisibility="Hidden"
                Source="Page/Login.xaml" />
        </Grid>
    </Grid>
</Window>
